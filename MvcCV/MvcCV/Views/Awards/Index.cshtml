@using MvcCV.Models.Entity
@model List<tbl_Awards>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var awards in Model)
                                        {


                                        <div class="time-label">
                                            <a href="/Awards/AwardGet/@awards.ID" class="btn btn-danger"><span class="bg-danger">
    @awards.Date
</span></a> 
                                        </div>
                                        
                                        <div>
                                            <i class="fas fa-award bg-primary"></i>
                                            <div class="timeline-item">
                                                
                                                
                                                <div class="timeline-body">
                                                    @awards.Explanation
                                                </div>
                                                @*<div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Edit</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                                </div>*@
                                            </div>
                                        </div>

                                        }
                                    </div>
                                    <a href="/Awards/NewAward" class="btn btn-success">Add new Certificate</a>
                                </div>
                            
                            
                        </div><!-- /.card-body -->
                    </div>
                    
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>

